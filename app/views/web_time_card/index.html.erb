<div class="mx-auto" style="width: 200px;"><h2>Time Card</h2></div>
<%= form_with scope: :card, url: "start" , method: :post, local: true do |form| %>
	<%= form.hidden_field :status, :value => @status %>
	<% if @status == "start" %>
		<%= form.submit "出社", :class => "btn btn-primary btn-block p-5" %>
<% else %>
	<%= form.submit "退社", :class => "btn btn-dark btn-block p-5" %>
<% end %>
