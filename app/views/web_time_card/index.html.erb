<% end %>

<table class="table">
	<thead>
		<th scope="col">月日</th>
		<th scope="col">時刻</td>
		<th scope="col">状況</th>
	</thead>
	<% @cards.each do |c| %>
		<tr>
			<td><%= c.datetime.strftime("%m月%d日") %></td>
			<td><%= c.datetime.strftime("%H:%M") %></td>
			<% if c.status == "start" %>
				<td class="bg-primary text-white">出社</td>
		<% else %>
				<td class="bg-dark text-white">退社</td>
		<% end %>

		</tr>
	<% end %>
</table>
